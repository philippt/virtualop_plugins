###############################################################################
###############################################################################
#
# HOST DEFINITIONS
#
###############################################################################
###############################################################################

define host{
        use                     <%= config_string('host_template', 'linux-host') %>
        host_name               <%= machine.name %>
        alias                   <%= machine.name %>
        address                 <%= machine.ipaddress %>
}


###############################################################################
###############################################################################
#
# SERVICE DEFINITIONS
#
###############################################################################
###############################################################################

define service{
        use                     generic-service
        host_name               <%= machine.name %>
        service_description     PING
        check_command           check_ping!100.0,20%!500.0,60%
}

define service{
        use                     generic-service
        host_name               <%= machine.name %>
        service_description     SSH
        check_command           check_ssh
}

